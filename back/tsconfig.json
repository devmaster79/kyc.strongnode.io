{
    "compilerOptions": {
        "outDir": "./build",
        "target": "es2021",
        "module": "commonjs",
        "baseUrl": "./src",
        "allowJs": true,
        "esModuleInterop": true,
        "strict": true,
        "lib": [
            "es6"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "rootDir": "./src",
        "resolveJsonModule": true,
        "paths": {
            "shared": ["../shared"]
        }
    },
    "include": [
        "./src",
    ],
    "references": [{
        "path": "../shared",
    }]
}