{
    "compilerOptions": {
        "outDir": "./build",
        "target": "es2021",
        "module": "commonjs",
        "baseUrl": ".",
        "allowJs": true,
        "esModuleInterop": true,
        "strict": true,
        "lib": [
            "es6"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "rootDir": ".",
        "resolveJsonModule": true,
        "paths": {
            "shared": ["../shared"]
        }
    },
    "include": [
        "./server.ts",
        "./app",
        "./app/**/*.json"
    ],
    "references": [{
        "path": "../shared",
    }]
}