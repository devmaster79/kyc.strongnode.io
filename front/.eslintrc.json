{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/jsx-runtime",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "plugin:sonarjs/recommended"
    ],
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "sonarjs",
        "prettier",
        "import"
    ],
    "rules": {
        // TODO: Let these be hard errors
        "sonarjs/cognitive-complexity": "warn",
        "react/prop-types": "warn",
        "prettier/prettier": "warn",
        "no-unused-vars": "warn",
        "sonarjs/no-identical-functions": "warn",
        "sonarjs/no-duplicate-string": "warn",
        "sonarjs/no-all-duplicated-branches": "warn",

        // This is off, because of React 17 does not require it:
        "react/react-in-jsx-scope": "off",
        // ts will detect undef:
        "no-undef":"off"
    },
    "globals": {
        "process": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
