{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:@typescript-eslint/eslint-recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "import"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "no-unused-vars": ["off", { "vars": "local", "args": "after-used", "ignoreRestSiblings": false }],
        "prettier/prettier": [
            "off",
            {
                "endOfLine": "lf"
            }
          ],
        "no-use-before-define": "off",
        "no-empty-function": "off",
        "@typescript-eslint/no-empty-function": "off",
        "no-empty-interface": "off",
        "@typescript-eslint/no-empty-interface": "off"
    }
}
