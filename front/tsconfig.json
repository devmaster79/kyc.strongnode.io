{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "esnext",
    "baseUrl": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["DOM", "ES2021"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "typeRoots": ["./src/types", "./node_modules/@types", "vite/client"],
    "rootDirs": ["src"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite-plugin-svgr/client"],
    "resolveJsonModule": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
